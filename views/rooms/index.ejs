<div class="jumbotron">
  <div class="container">
    Welcome <%= currentUser.first_name %> <br>
    There are <%= roomCount %> rooms available
  </div>
</div>
<div class="container">
<div id="scroll-rooms row">
	<div class="col-lg-8 col-md-6">
	<div id="create-article">
		<button type="button" class="btn btn-primary"><a href="/rooms/new">Create new Rooms</a></button>
	</div>
	<ul class="list-group">
		<% rooms.forEach(function(room, i) { %>
			<li class="list-group-item">
				<label class="col-sm-2 control-label"> 
					$<%= room.price%> <br>
					<span class="glyphicon glyphicon-user">= <%= room.max_people%></span>
				</label>
				<a href="/rooms/<%=room._id%>">
					<h4 class="list-group-item-heading"><%= room.room_type %></h4>
				</a>
			    
			    <%= room.hotel_name%>
			    <%= room.organizer%>
			    <a href='' class="location-grabber"><%= room.street_address + ', ' + room.city + ', ' + room.state + ' ' + room.zipcode %></a> 
			</li>
		<% }); %>
	</ul>
	</div>
	<div class="col-lg-4 col-md-6">
		<div id="map-canvas" class="map"></div>
	</div>
</div>
 </div>

<script type="text/javascript" src="/javascripts/map.js"></script>