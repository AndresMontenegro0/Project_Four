<div class="container">
<form class="form-horizontal" action="/rooms" method="post">
	<div class="input-group form-group col-sm-4">
	  <span class="input-group-addon" id="basic-addon1">Room type</span>
	  <input type="text" class="form-control" aria-describedby="basic-addon1" name="room[room_type]" >
	</div>

	<div class="row form-inline form-group">
	<div class="col-sm-2">
	<div class="input-group">
	  <span class="input-group-addon">$</span>
	  <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" name="room[price]">
	  <span class="input-group-addon">.00</span>
	  </div>
	</div>

	<div class="col-sm-2">
	<div class="input-group">
	  <span class="input-group-addon" id="basic-addon1">No. of people</span>
	  <input type="text" class="form-control" aria-describedby="basic-addon1" name="room[max_people]">
	</div>
	</div>
	</div>

	<div class="input-group form-group col-sm-4">
	  <span class="input-group-addon" id="basic-addon1">Hotel</span>
	  <input type="text" class="form-control" aria-describedby="basic-addon1" name="room[hotel_name]">
	</div>

	<div class="input-group form-group col-sm-4">
	  <span class="input-group-addon" id="basic-addon1">Address</span>
	  <input type="text" class="form-control" aria-describedby="basic-addon1" name="room[street_address]">
	</div>

	<div class="input-group form-group col-sm-4">
	  <span class="input-group-addon" id="basic-addon1">City</span>
	  <input type="text" class="form-control" aria-describedby="basic-addon1" name="room[city]">
	</div>

	<div class="input-group form-group col-sm-4">
	  <span class="input-group-addon" id="basic-addon1">State</span>
	  <input type="text" class="form-control" aria-describedby="basic-addon1" name="room[state]">
	</div>

	<div class="input-group form-group col-sm-4">
	  <span class="input-group-addon" id="basic-addon1">Zipcode</span>
	  <input type="text" class="form-control" aria-describedby="basic-addon1" name="room[zipcode]">
	</div>

	<div class="input-group form-group col-sm-6">
	<span class="input-group-addon" id="basic-addon1">Description</span>
	<textarea class="form-control input-lg" rows="3" name="room[content]"></textarea>
	</div>
	<button type="submit" class="btn btn-default">Create</button>
</form>

</div>

